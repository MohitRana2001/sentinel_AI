FROM python:3.12-slim

WORKDIR /app

# Install ffmpeg and other dependencies for video processing (required by moviepy)
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["python", "processors/video_processor_service.py"]

